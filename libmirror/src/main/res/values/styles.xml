    <!-- VideoPlayer -->
    <style name="MediaButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:background">@drawable/ap_plug_vp_btn_bg</item>
    </style>

    <style name="MediaButton.ScreenBright">
        <item name="android:src">@drawable/ap_plug_vp_bright_mode</item>
    </style>
    <style name="MediaButton.Previous">
        <item name="android:src">@drawable/ap_icon_syg1</item>
    </style>
    <style name="MediaButton.Scale">
        <item name="android:src">@drawable/ap_icon_scale</item>
    </style>
    <style name="MediaButton.Btnmore">
        <item name="android:src">@drawable/ap_s1_0</item>
    </style>
    <style name="MediaButton.Next">
        <item name="android:src">@drawable/ap_icon_xyg1</item>
    </style>
    <style name="MediaButton.Play">
        <item name="android:src">@drawable/ap_icon_bofang1</item>
    </style>

    <style name="MediaButton.Exit">
        <item name="android:src">@drawable/ap_plug_vp_exit</item>
    </style>

    <style name="VolumeButton">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:background">@drawable/ap_plug_vp_btn_bg</item>
    </style>
</resources>